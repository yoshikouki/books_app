- i18n_devise_scope = 'devise.shared.links'

- if controller_name != 'sessions'
  = link_to t('sign_in', scope: i18n_devise_scope), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('sign_up', scope: i18n_devise_scope), new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('forgot_your_password', scope: i18n_devise_scope), new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('didn_t_receive_confirmation_instructions', scope: i18n_devise_scope), new_confirmation_path(resource_name)
  -# = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('didn_t_receive_unlock_instructions', scope: i18n_devise_scope), new_unlock_path(resource_name)
  -# = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to(t('sign_in_with_provider', 
                scope: i18n_devise_scope,
                provider: OmniAuth::Utils.camelize(provider)), 
              omniauth_authorize_path(resource_name, provider))
    %br/
